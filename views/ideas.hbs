{{> header}}
<link rel="stylesheet" type="text/css" href="/css/ideas.css">
{{> navbar}}

<div class="container">

	<h1 class="text-center">My ideas</h1>

	{{#if ideaList.ideas}}
		<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
			{{#group ideaList.ideas by="category"}}
		  		<div class="panel panel-default">
				    <div class="panel-heading" role="tab" id="{{spaceRemove value}}1">
				      	<h4 class="panel-title">
				        	<a role="button" data-toggle="collapse" data-parent="#accordion" href="#{{spaceRemove value}}" aria-expanded="true" aria-controls="{{spaceRemove value}}">
				          		{{ value }}
				        	</a>
				      	</h4>
				    </div>
				    <div id="{{spaceRemove value}}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="{{spaceRemove value}}1">
				      	<div class="panel-body">
				      		<div class="row">
								{{#each items}}
									<div class="col-lg-6">
									<h2 class="title">{{ title }}</h2>
									<p class="text">{{truncate text}}</p>
									<div class="row">
										<div class="col-xs-3 col-md-4">
											<a class="btn btn-default" href="/ideas/{{_id}}"><span class="hidden-xs">View idea </span><i class="fa fa-eye" aria-hidden="true"></i></a>
										</div>
										<div class="col-xs-3 col-md-4">
											<a class="btn btn-default" href="/ideas/{{_id}}/edit"><span class="hidden-xs">Edit idea </span><i class="fa fa-pencil" aria-hidden="true"></i></a>
										</div>
										<form class="col-xs-6 col-md-4" action="/ideas/{{_id}}/?_method=DELETE" method="POST">
											<button class="btn btn-danger pull-right"><span class="hidden-xs">Delete </span><i class="fa fa-trash-o" aria-hidden="true"></i></button>
										</form>
									</div>
									<hr>
									</div>
								{{/each}}
							</div>
				      	</div>
				    </div>
				</div>
			{{/group}}
		</div>
	{{else}}
		<div class="jumbotron">
			<p class="text-center">There are no ideas here yet. Add some!</p>
		</div>
	{{/if}}

	<a class="btn btn-default btn-block btn-lg" href="/ideas/new">New Idea <i class="fa fa-lightbulb-o" aria-hidden="true"></i></a>

</div>

{{> footer}}