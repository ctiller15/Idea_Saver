{{> header}}

<div class="container">

	<h1 class="text-center">My ideas</h1>

	{{#if ideaList.ideas}}
		<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
			{{#group ideaList.ideas by="category"}}
		  		<div class="panel panel-default">
				    <div class="panel-heading" role="tab" id="headingOne">
				      	<h4 class="panel-title">
				        	<a role="button" data-toggle="collapse" data-parent="#accordion" href="#{{#spaceRemove value}}{{/spaceRemove}}" aria-expanded="true" aria-controls="{{#spaceRemove value}}{{/spaceRemove}}">
				          		{{ value }}
				        	</a>
				      	</h4>
				    </div>
				    <div id="{{#spaceRemove value}}{{/spaceRemove}}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
				      	<div class="panel-body">
							{{#each items}}
								<h2>{{ title }}</h2>
								<p>{{ text }}</p>
								<div class="row">
									<div class="col-xs-4">
										<a class="btn btn-default" href="/ideas/{{_id}}">View idea</a>
									</div>
									<div class="col-xs-4">
										<a class="btn btn-default" href="/ideas/{{_id}}/edit">Edit idea</a>
									</div>
									<form class="col-xs-4" action="/ideas/{{_id}}/?_method=DELETE" method="POST">
										<button class="btn btn-danger">Delete</button>
									</form>
								</div>
							{{/each}}
				      	</div>
				    </div>
				</div>
			{{/group}}
		</div>
	{{else}}
		<div>
			There are no ideas here yet. Add some!
		</div>
	{{/if}}

	<a class="btn btn-default btn-block btn-lg" href="/ideas/new">New Idea</a>

</div>

{{> footer}}