{{> appHeader}}
<link rel="stylesheet" type="text/css" href="/css/register.css">
{{> navbar}}

<div class="container">

	<h1 class="text-center">Log in</h1>

	<form action="/login" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="username" placeholder="username" minlength="6" maxlength="20" required>
		</div>
		<div class="form-group">
			<input class="form-control" type="password" name="password" placeholder="password" minlength="6" maxlength="20" required>
		</div>
		<button class="btn btn-primary btn-block btn-lg">Login</button>
	</form>

</div>

{{> appFooter}}