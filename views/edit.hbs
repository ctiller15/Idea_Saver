{{!-- Contains the edit form for a single idea. --}}
{{!-- {{ ideaID }}
 --}}

<div class="container">

	<h2 class="text-center">Edit your idea</h2>

	<form action="./?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="title" placeholder="new title" minlength="6" maxlength="100" required>
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="category" placeholder="new category">
		</div>
		<div class="form-group">
			<textarea class="form-control" type="textarea" name="text" rows="5" placeholder="new text" required></textarea>
		</div>
		<button class="btn btn-default btn-block btn-lg">Update Idea</button>
	</form>
</div>

{{> footer}}