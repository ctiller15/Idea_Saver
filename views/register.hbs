{{> header}}

<div class="container">

	<h1 class="text-center">Create an account:</h1>

	<div>
		<form action="/register" method="POST">
			<input class="form-control" type="text" name="username" placeholder="username" minlength="6" maxlength="20" required>
			<input class="form-control" type="password" name="password" placeholder="password" minlength="6" maxlength="20" required>
			<button class="btn btn-default btn-block">Sign up</button>
		</form>
	</div>
</div>

{{> footer}}