{{> appHeader}}

{{> navbar}}

	<div class="centering">
		<div class="container">
			<div class="jumbotron">
				<h1 class="text-center">Idea Saver</h1>
				<p class="text-center">A place to store and keep track of all of your great ideas.</p>

				{{#unless currentUser}}
					<div class="row">
						<a class="pull-left btn btn-default btn-lg" href="/register">Register</a>
						<a class="pull-right btn btn-default btn-lg" href="/login">Log In</a>
					</div>
				{{else}}
					<a class="btn btn-default btn-block btn-lg" href="/ideas/new">Create a new idea <i class="fa fa-lightbulb-o" aria-hidden="true"></i></a>
				{{/unless}}
			</div>
		</div>
	</div>

{{> appFooter}}